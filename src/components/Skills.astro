---
interface Props {
  skills: string[];
}

const { skills } = Astro.props as Props;
---

<section id="skills" class="py-24 md:py-32">
  <h2 class="mb-8 font-serif text-4xl font-bold tracking-tight text-white">
    Skills
  </h2>

  <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 gap-4">
    {skills.map((skill: string) => (
      <span class="px-4 py-2 bg-white/10 backdrop-blur-sm border border-white/10 rounded-md text-white text-sm">
        {skill}
      </span>
    ))}
  </div>
</section>
